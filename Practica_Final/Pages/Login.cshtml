@page
@model PracticaFinal.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
 <section class="section">
      <div class="container mt-5">
          <div class="row">
              <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                  <div class="card card-primary">
                      <div class="card-header">
                          <h4>Iniciar sesión</h4>
                      </div>
                      <div class="card-body">
                          <form method="post" class="needs-validation" novalidate="">
                              <div class="form-group">
                                  <label for="email">Email</label>
                                  <input id="email" type="email" class="form-control" name="email" tabindex="1" required autofocus>
                                  <div class="invalid-feedback">
                                      Por favor ingrese su correo electrónico
                                  </div>
                              </div>
                              <div class="form-group">
                                  <input id="password" type="password" class="form-control" name="password" tabindex="2" required>
                                  <div class="invalid-feedback">
                                      Por favor ingrese su contraseña
                                  </div>
                              </div>
                              <div class="form-group">
                                  <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                      Iniciar sesión
                                  </button>
                                  @if (ViewData["validacion"] != null)
                                  {
                                      <div style="width: 100%; margin-top: 2rem; font-size: 20px; color: #dc3545; font-weight:600;">
                                          @ViewData["validacion"]
                                      </div>
                                  }

                              </div>
                          </form>
                      </div>
                  </div>
                  <div class="mt-5 text-muted text-center">
                      ¿No tienes una cuenta? <a asp-area="" asp-page="/Registrarse">Registrate</a>
                  </div>
              </div>
          </div>
      </div>
    </section>