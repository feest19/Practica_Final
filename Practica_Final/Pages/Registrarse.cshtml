@page
@model PracticaFinal.Pages.RegistrarseModel
@{
}

<section class="section">
      <div class="container mt-5">
        <div class="row">
          <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
            <div class="card card-primary">
              <div class="card-header">
                <h4>Register</h4>
              </div>
              <div class="card-body">
                <form method="POST" class="needs-validation" novalidate="">
                  <div class="row">
                      <div class="form-group col-6">
                          <label for="frist_name">Nombre</label>
                          <input type="text" asp-for="usuario.Nombre" class="form-control" required autofocus="">
                          <div class="invalid-feedback">
                              Por favor ingrese su nombre
                          </div>
                      </div>
                      <div class="form-group col-6">
                          <label for="last_name">Apellido</label>
                          <input type="text" asp-for="usuario.Apellido" class="form-control" required>
                          <div class="invalid-feedback">
                              Por favor ingrese su apellido
                          </div>
                      </div>
                  </div>
                  <div class="form-group">
                      <label for="email">Email</label>
                      <input id="email" asp-for="usuario.Email" type="email" class="form-control" required>
                      <div class="invalid-feedback">
                          Por favor ingrese su correo electrónico
                      </div>
                      @if (ViewData["emailEnUso"] != null)
                      {
                          <div style="width: 100%; margin-top: .25rem; font-size: 80%; color: #dc3545; font-weight:600;">
                              @ViewData["emailEnUso"]
                          </div>
                      }
     
                  </div>
                  <div class="row">
                      <div class="form-group col-6">
                          <label for="password" class="d-block">contraseña</label>
                          <input asp-for="usuario.Password" type="password" class="form-control pwstrength" required data-indicator="pwindicator">
                          <div class="invalid-feedback">
                              Por favor ingrese su contraseña
                          </div>
                          @if (ViewData["passwordDiferente"] != null)
                          {
                              <div style="width: 100%; margin-top: .25rem; font-size: 80%; color: #dc3545; font-weight:600;">
                                  @ViewData["passwordDiferente"]
                              </div>
                          }
                      </div>
                    <div class="form-group col-6">
                        <label for="password2" class="d-block">Confirmar contraseña</label>
                        <input asp-for="usuario.ConfirmPassword" id="password2" type="password" required class="form-control">
                        <div class="invalid-feedback">
                            Por favor confirme su contraseña
                        </div>
                        @if (ViewData["passwordDiferente"] != null)
                        {
                            <div style="width: 100%; margin-top: .25rem; font-size: 80%; color: #dc3545; font-weight:600;">
                                @ViewData["passwordDiferente"]
                            </div>
                        }                      
                    </div>
                  </div>
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">
                      Registrarse
                    </button>
                  </div>
                </form>
              </div>
              <div class="mb-4 text-muted text-center">
                  ¿Tienes una cuenta? <a asp-area="" asp-page="/Login">Inicia Sesión</a>
              </div>
            </div>
          </div>
        </div>
      </div>
</section>